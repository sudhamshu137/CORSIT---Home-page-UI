<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/corsitlogo_darktheme2" />

        <com.agrawalsuneet.dotsloader.loaders.LazyLoader
            android:id="@+id/loader"
            android:layout_width="110dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            app:lazyloader_animDur="500"
            app:lazyloader_dotsDist="10dp"
            app:lazyloader_dotsRadius="8dp"
            app:lazyloader_firstDelayDur="150"
            app:lazyloader_firstDotColor="#b1b1b1"
            app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
            app:lazyloader_secondDelayDur="300"
            app:lazyloader_secondDotColor="#7e7e7e"
            app:lazyloader_thirdDotColor="#b1b1b1" />

    </LinearLayout>

</RelativeLayout>